<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.afterday.compas.MainActivity"
    android:keepScreenOn="true">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_centerInParent="false"
        android:background="@drawable/popup_background"
        app:layout_heightPercent="90%"
        app:layout_marginBottomPercent="1%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="10%"
        app:layout_widthPercent="99%" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="87%"
        app:layout_marginTopPercent="7%"
        android:background="@drawable/popup_close" />

    <ImageButton
        android:id="@+id/openPrefs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="6%"
        app:layout_marginTopPercent="7%"
        android:background="@drawable/popup_gear" />

    <GridView
        android:id="@+id/inventory_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="100dp"
        android:gravity="center_horizontal|center_vertical"
        android:horizontalSpacing="5dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        app:layout_heightPercent="78%"
        app:layout_marginLeftPercent="15%"
        app:layout_marginTopPercent="15%"
        app:layout_widthPercent="70%" />

</android.support.percent.PercentRelativeLayout>